<idea-plugin version="2">
    <id>com.github.tommykw</id>
    <name>Optimize resources plugin</name>
    <version>1.0.0</version>
    <vendor email="destinys.lotus.1108mn@gmail.com" url="https://github.com/tommykw/android-optimize-resources-plugin">Optimize resources plugin</vendor>

    <description><![CDATA[
      This plugin help you to optimize resources in your Android project.
    ]]></description>

    <change-notes><![CDATA[
      1.0.0: Initial release.<br>
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <actions>
        <group id="OptimizeResources.CodeMenu" text="Optimize Resources" description="Optimize Resources">
            <add-to-group group-id="CodeMenu" anchor="last"  />
            <action id="OptimizeResources.CodeMenu" class="ResourceOptimizeAction" text="Optimize Resources" description="Optimize Resources" />
        </group>
    </actions>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>
</idea-plugin>